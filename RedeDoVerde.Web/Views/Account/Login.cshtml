
@{
    ViewData["Title"] = "Login";
}

    <h1>@ViewData["Title"]</h1>

@model RedeDoVerde.Web.ViewModel.Account.LoginViewModel

<div class="text-center">
    <h1 class="display-4">Login na Rede do Verde</h1>
</div>


<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login" asp-controller="Account" method="post" asp-route-returnurl="@ViewBag.ReturnUrl">
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<hr />

<div>
    <a asp-action="Register">Register</a>
</div>